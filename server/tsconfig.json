{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "allowJs": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "outDir": "dist",
        "lib": [ "esnext" ],
        "types": [ "node" ],
    }
}
